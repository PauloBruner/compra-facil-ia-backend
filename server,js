import express from "express";
import cors from "cors";
import dotenv from "dotenv";

dotenv.config();

const app = express();
app.use(cors());
app.use(express.json());

app.get("/", (req, res) => {
  res.status(200).send("Compra Fácil IA - Backend OK");
});

app.post("/analyze", async (req, res) => {
  res.json({
    result: `
RESUMO:
Produto popular e bem avaliado.

PRÓS:
- Boa reputação
- Preço competitivo

CONTRAS:
- Pode haver opções melhores em promoções

VEREDITO:
Vale comparar antes de comprar.
`
  });
});

const PORT = process.env.PORT || 3000;

app.listen(PORT, () => {
  console.log("Servidor rodando na porta", PORT);
});
